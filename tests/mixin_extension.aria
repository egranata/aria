mixin Foo {
    func bar() {
        return 1;
    }
}

struct UsesFoo {
    include Foo
}

extension Foo {
    func baz() {
        return 2;
    }
}

mixin Bar {
    func double() {
        return this * 2;
    }
}

extension Int : Bar {
}

func test_extension_shorthand() {
    assert 5.double() == 10;
}

func main() {
    val f = alloc(UsesFoo);
    assert f.bar() == 1;

    assert f.baz() == 2;
    test_extension_shorthand();
}
