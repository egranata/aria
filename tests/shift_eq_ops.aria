func main() {
    val x = 8;
    x <<= 2;  
    assert x == 32;

    val y = 32;
    y >>= 2;  
    assert y == 8;


    val z = 4;
    z <<= 1;  # 4 << 1 = 8
    z <<= 2;  # 8 << 2 = 32
    assert z == 32;
    z >>= 3;  # 32 >> 3 = 4
    assert z == 4;

    val a = 1;
    a <<= 3;  # 1 << 3 = 8
    a += 4;   # 8 + 4 = 12
    a >>= 2;  # 12 >> 2 = 3
    assert a == 3;

    val b = 0b1010;  # 10 in decimal
    b <<= 2;         # 0b101000 = 40
    assert b == 40;
    b >>= 3;         # 0b101 = 5
    assert b == 5;

    # Shift by zero (should be no-op)
    val c = 15;
    c <<= 0;
    assert c == 15;
    c >>= 0;
    assert c == 15;
}