import guard from aria.utils.guard;

struct Guard {
    type val COUNTER = 0;

    instance func guard_exit() {
        Guard.COUNTER = Guard.COUNTER + 1;
    }
}

func add(x,y) {
    return guard(alloc(Guard)).do(|g| => {
        return x + y;
    })??;
}

func main() {
    assert Guard.COUNTER == 0;
    val n = add(3,4);
    assert n == 7;
    assert Guard.COUNTER == 1;
}
