import guard from aria.utils.guard;

struct Guard {
    type val COUNTER = 0;

    func guard_exit() {
        Guard.COUNTER = Guard.COUNTER + 1;
    }
}

func ths() {
    guard(alloc(Guard)).do(|g| => {
        throw 1;
    });
}

func catches() {
    val caught = false;
    try {
        ths();
    } catch e {
        caught = (e == 1);
        assert Guard.COUNTER == 1;
    }

    return caught;
}

func main() {
    assert catches() == true;
    assert Guard.COUNTER == 1;
}
